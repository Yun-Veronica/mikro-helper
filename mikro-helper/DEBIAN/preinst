#!/bin/bash
set -e

# Проверка прав суперпользователя
if [ "$(id -u)" -ne 0 ]; then
    echo "Этот скрипт должен быть запущен от имени суперпользователя." >&2
    exit 1
fi

# Проверка наличия Python
if ! command -v python3 &>/dev/null; then
    echo "Python 3 не установлен. Установите его перед продолжением." >&2
    exit 1
fi

# Проверка наличия pip
if ! command -v pip3 &>/dev/null; then
    echo "pip для Python 3 не установлен. Установите его перед продолжением." >&2
    exit 1
fi

# Выполнение дополнительных действий (если необходимо)
# Например, создание каталога для хранения данных программы
install -d -m 755 /var/lib/my_mikrohelper

# Вывод информационного сообщения
echo "preinst скрипт завершен успешно."

exit 0
